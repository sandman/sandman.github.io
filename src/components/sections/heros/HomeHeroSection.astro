---
import { Icon } from 'astro-icon/components';
import { Container, Button, StickyTextImageSection, CtaCardSection } from '@components/odyssey-theme';
import settings from '../../../config/settings.js';
import {ThemeSwitcher} from '../../theme-switcher/theme-switcher';
---

<Container>
	<section class="hero-section__section">
		<div class="hero-section__text">
				<h1>Hello, world!</h1>
				<p>
				ðŸš€ I'm Sandip, a fractional Chief Technology & Product Officer helping startups and scaleups build faster, scale smarter, and execute with confidence.
				</p>
				<div class="hero-btns__container">
					<Button href="/contact" customIcon>Learn More
					<Fragment slot="icon">
					<Icon name="ic:baseline-chevron-right"/>
					</Fragment>
					</Button>
				</div>
        {settings.enableThemeSwitcher && <ThemeSwitcher client:only/>}
		</div>
		<div class="hero-section__image">
				<picture>
					<img
						src="/assets/images/home/classic-hero.jpg"
						alt="Astro Odyssey"
						id="home-hero-image"
					/>
				</picture>
		</div>
	</section>
</Container>

	<StickyTextImageSection>
		<div slot="text-container">
			<h2>How I help</h2>
			<p>
				I partner with early-stage and growth companies as a hands-on fractional Chief Technology & Product Officer to:
			</p>
			<h3>Align product and tech with business strategy</h3>
			<p>I help you define what matters, build only what moves the needle, and cut the noise.</p>
			
			<h3>Scale teams and delivery without chaos</h3>
			<p>I can help with designing the right org structure, hiring intentionally, and building execution muscle.</p>
			
			<h3>Unblock growth, roadmap, or investor readiness</h3>
			<p>Whether it's go-to-market, technical architecture, or due diligence â€” I bring clarity fast.</p>

		</div>
		<picture slot="image-container">
			<img
				src="/assets/images/home/strategy-session.jpg"
				alt="Strategy session with Sandip"
				loading="lazy"
			/>
		</picture>
	</StickyTextImageSection>

	<CtaCardSection
		background="var(--theme-surface-1)"
		color="var(--theme-on-surface-1)"
	>
		<h3>Learn more about my approach</h3>
		<p>
		</p>
		<Button href="/theme/get-started" customIcon
			>Get Started <Fragment slot="icon">
				<Icon name="ic:baseline-chevron-right" />
			</Fragment></Button
		>
	</CtaCardSection>

<style>
	.hero-section__section {
		margin: var(--section-margin) auto;
		min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		gap: 1rem;
	}
	.hero-section__text {
		justify-self: center;
		max-width: 25rem;
	}
	.hero-btns__container {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.hero-btns__container {
		margin-right: 1rem;
	}
	.hero-section__image {
		display: flex;
	}
	.hero-section__image img {
		width: 100%;
		height: 100%;
		max-height: 80vh;
		object-fit: cover;
		border-radius: var(--theme-shape-radius);
	}
	@media (max-width: 768px) {
		.hero-section__section {
			grid-template-columns: 1fr;
		}
	}
</style>
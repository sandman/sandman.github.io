---
import Layout from '../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';

const seo = {
	title: 'Thank You | Message Sent Successfully',
	description: 'Thank you, your message has been sent successfully.',
};
---

<Layout seo={seo}>
	<Container>
		<section class="thank-you__section">
			<div class="thank-you__content">
				<h1>Thank you for your message!</h1>
				<p>
					Your message has been sent successfully. I'll get back to you as soon as possible.
				</p>
				<p>
					<a href="/">‚Üê Return to Home</a>
				</p>
			</div>
		</section>
	</Container>
</Layout>

<style>
	.thank-you__section {
		margin: var(--section-margin) auto;
		min-height: calc(70vh - var(--navbar-height));
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.thank-you__content {
		padding: 3rem;
		background-color: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
		text-align: center;
		max-width: 500px;
	}
	.thank-you__content h1 {
		color: var(--theme-primary);
		margin-bottom: 1rem;
	}
	.thank-you__content p {
		margin-bottom: 1rem;
	}
	.thank-you__content a {
		color: var(--theme-primary);
		text-decoration: none;
	}
	.thank-you__content a:hover {
		text-decoration: underline;
	}
</style>